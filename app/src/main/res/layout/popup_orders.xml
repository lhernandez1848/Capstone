<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageButton
        android:id="@+id/btnNewOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/solid_border_white_back"
        android:src="@drawable/create_order"
        android:adjustViewBounds="true"
        android:padding="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/str_create_order" />
    <ImageButton
        android:id="@+id/btnOrderHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/solid_border_white_back"
        android:src="@drawable/order_history"
        android:adjustViewBounds="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="50dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/str_track_order" />

</LinearLayout>